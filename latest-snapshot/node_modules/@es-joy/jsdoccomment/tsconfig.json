    "lib": ["es2022"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "es6",
    "outDir": "dist"
